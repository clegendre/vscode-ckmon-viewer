{
    "name": "ckmon",
    "displayName": "ckmon",
    "description": "CKMon expander to text or other readable formats",
    "version": "0.0.1",
    "publisher": "Signature",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.ckmon"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.ckmon",
                "title": "CKMon to Text"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run compile",
        "build": "dotnet publish src/wrapper/CKMonWrapper.csproj -o ../../out/ckmontotext -f netcoreapp2.1 -c Release",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "3.1.6",
        "vscode": "1.1.21",
        "tslint": "5.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
